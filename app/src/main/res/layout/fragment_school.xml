<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:layout_marginTop="5dp"
        android:id="@+id/school_viewPager"
        android:layout_width="match_parent"
        android:layout_height="170dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#806ca6cd"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/school_dot_layout"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/school_tv_des"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="食堂图片"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择你所在的位置"
        android:layout_gravity="center"/>

    <cn.edu.nuc.recommendme.Utils.ToggleButton
        android:layout_marginTop="17dp"
        android:id="@+id/school_toggleButton"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/school_by_yourself"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="量身定制"/>

        <Button
            android:id="@+id/school_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随机选择"/>
    </LinearLayout>


</LinearLayout>